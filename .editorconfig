root = true

[*]
charset = utf-8
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 80

[*.md]
# Preserve trailing spaces which can be meaningful in Markdown line breaks
trim_trailing_whitespace = false
max_line_length = 80

[*.txt]
max_line_length = 80

[*.py]
indent_size = 4
max_line_length = 80

[*.cs]
indent_size = 4
# Place using directives outside the namespace
csharp_using_directive_placement = outside_namespace:suggestion
# Place open braces on a new line for all constructs
csharp_new_line_before_open_brace = all
# Prefer braces even for single-line statements
csharp_prefer_braces = true:suggestion
# Sort System.* usings first
dotnet_sort_system_directives_first = true
# Prefer 'var' usage in most places
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion
# Formatting analyzer severity
dotnet_diagnostic.IDE0055.severity = warning
