private void ExecuteBusinessLogic(IOrganizationService service, ITracingService tracingService, Entity entity)
{
    try
    {
        // Create a follow-up task related to the new Account
        Entity task = new Entity("task");
        task["subject"] = "Follow up with new account";
        task["description"] = "Reach out to the new account for onboarding.";
        task["scheduledend"] = DateTime.UtcNow.AddDays(7);
        task["regardingobjectid"] = new EntityReference("account", entity.Id);

        service.Create(task);
    }
    catch (Exception ex)
    {
        tracingService.Trace("ExecuteBusinessLogic Exception: {0}", ex.ToString());
        throw;
    }
}