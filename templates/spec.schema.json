{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://pluginright.dev/spec.schema.json",
    "type": "object",
    "required": [
        "entity",
        "message",
        "stage",
        "mode",
        "description"
    ],
    "properties": {
        "entity": {
            "type": "string",
            "minLength": 1
        },
        "message": {
            "type": "string",
            "enum": [
                "Create",
                "Update",
                "Delete",
                "Associate",
                "Disassociate"
            ]
        },
        "stage": {
            "type": "integer",
            "enum": [
                10,
                20,
                30,
                40
            ]
        },
        "mode": {
            "type": "string",
            "enum": [
                "Sync",
                "Async"
            ]
        },
        "description": {
            "type": "string",
            "minLength": 1
        },
        "namespace": {
            "type": "string"
        },
        "name": {
            "type": "string"
        }
    }
}