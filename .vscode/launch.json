{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PluginRight CLI (no args)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build PluginRight.Cli",
            "program": "${workspaceFolder}/src/PluginRight.Cli/bin/Debug/pluginright.dll",
            "cwd": "${workspaceFolder}/src/PluginRight.Cli",
            "console": "integratedTerminal",
            "args": []
        },
        {
            "name": "PluginRight CLI â€“ new plugin",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build PluginRight.Cli",
            "program": "${workspaceFolder}/src/PluginRight.Cli/bin/Debug/pluginright.dll",
            "cwd": "${workspaceFolder}/src/PluginRight.Cli",
            "console": "integratedTerminal",
            "args": [
                "new",
                "plugin",
                "--name",
                "AccountCreate",
                "--namespace",
                "Company.Dataverse.Plugins",
                "--entity",
                "account",
                "--message",
                "Create",
                "--stage",
                "PostOperation",
                "--out",
                "${workspaceFolder}/out/AccountCreate"
            ]
        }
    ]
}